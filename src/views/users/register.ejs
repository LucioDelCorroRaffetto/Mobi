<%-include('../partials/headForm.ejs')%>

<%-include('../partials/header.ejs')%>

    <main>
        <div class="login-container">
        <form class="login-form" action="/users/register" method="POST" enctype="multipart/form-data">
            <p class="heading">Register</p>
            <p class="paragraph">Register to get your account</p>

            <div class="input-group">
            <label for="firstName">Nombre</label>
            <input
                required=""
                placeholder="First Name"
                name="firstName"
                id="firstName"
                type="text"
                value="<%= locals.firstName ? firstName : "" %>"
            />
            <% if(locals.errores && locals.errores.firstName) {%>
                <p><%= errores.firstName.msg %></p>
            <% } %>
            </div>

        <div class="input-group">
            <label for="lastName">Apellido</label>
            <input
                required=""
                placeholder="Last Name"
                name="lastName"
                id="lastName"
                type="text"
                value="<%= locals.lastName ? lastName : "" %>"
            />
            <% if(locals.errores && locals.errores.lastName) {%>
                <p><%= errores.lastName.msg %></p>
            <% } %>
            </div>

        <div class="input-group">
            <label for="email">Correo Electrónico</label>
            <input
                required=""
                placeholder="Email"
                name="email"
                id="email"
                type="text"
                value="<%= locals.email ? email : "" %>"
            />
            <% if(locals.errores && locals.errores.email) {%>
                <p><%= errores.email.msg %></p>
            <% } %>
            </div>

        <div class="input-group">
            <label for="password">Contraseña</label>
            <input
                required=""
                placeholder="Password"
                name="password"
                id="password"
                type="password"
                value="<%= locals.password ? password : ""%>"
            />
            <% if(locals.errores && locals.errores.password) {%>
                <p><%= errores.password.msg %></p>
            <% } %>
            </div>

        <div class="input-group">
            <label for="category">Sexo</label>
            <input
                required=""
                placeholder="Indique su sexo"
                name="category"
                id="category"
                type="text"
                value="<%= locals.category ? category : "" %>"
            />
            <% if(locals.errores && locals.errores.category) {%>
                <p><%= errores.category.msg %></p>
            <% } %>
            </div>

        <div class="input-group">
            <label for="image">Imagen de Perfil</label>
            <input
                required=""
                placeholder="Imagen"
                name="image"
                id="image"
                type="file"
                value="<%= locals.image ? image : "" %>"
            />
            <% if(locals.errores && locals.errores.image) {%>
                <p><%= errores.image.msg %></p>
            <% } %>
            </div>
            <button type="submit">Register</button>
            <div class="bottom-text">
            <p class="account">Do you have an account? <a href="#">Login</a></p>
            </div>
        </form>
        </div>
    </main>

    <%-include('../partials/footer.ejs')%>

            <!-- Scripts -->
            <script src="/javascripts/home.js"></script>
            <script>
                // Agregar evento de cambio al checkbox
                document.getElementById("input").addEventListener("change", changeTheme);
            </script>
</html>