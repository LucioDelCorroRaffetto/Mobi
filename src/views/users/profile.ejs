<%-include('../partials/headForm.ejs')%>

<%-include('../partials/header.ejs')%>

<main>
        <div class="login-container">
            <form class="login-form" action="/users/profile" method="POST">
                <p class="heading">Profile</p>
                <div class="profile-image">
                    <img src="/images/users/<%= user.image %>" alt="Foto de perfil">
                </div>
                <p class="paragraph">Edit your profile</p>
                <div class="input-group">
                    <input
                        required=""
                        placeholder="Username"
                        name="nombre"
                        id="name"
                        type="text"
                        value="<%= user.firstName %>"
                        readonly
                    />
                </div>
                <div class="input-group">
                    <input
                        required=""
                        placeholder="Email"
                        name="correo"
                        id="email"
                        type="text"
                        value="<%= user.email %>"
                        readonly
                    />
                </div>
                <div class="input-group">
                    <input
                        required=""
                        placeholder="Password"
                        name="contrasena"
                        id="password"
                        type="password"
                        value="<%= locals.contrasena ? contrasena : ""%>"
                    />
                    <% if(locals.errores && locals.errores.contrasena) {%>
                        <p><%= errores.contrasena.msg %></p>
                    <% } %>
                </div>
                <button type="submit">Edit</button>    
            </form>
        </div>
</main>

<%-include('../partials/footer.ejs')%>
    <!-- Scripts -->
    <script src="/javascripts/home.js"></script>
    <script>
        // Agregar evento de cambio al checkbox
        document.getElementById("input").addEventListener("change", changeTheme);
    </script>
</html>